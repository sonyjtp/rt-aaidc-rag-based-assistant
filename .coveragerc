[run]
# Files and directories to omit from coverage
omit =
    */streamlit_app.py
    */ui_constants.py
    */app_constants.py
    */tests/*
    */__pycache__/*
    */.venv/*
    */venv/*

branch = True

[report]
# Regex for lines to exclude from consideration
exclude_lines =
    # Have to re-enable the standard pragma
    pragma: no cover

    # Don't complain about missing debug-only code:
    def __repr__
    def __str__

    # Don't complain if tests don't hit conditional imports:
    except ImportError

    # Don't complain about abstract methods:
    @abstractmethod
    @abc.abstractmethod

    # Don't complain about defensive code
    raise NotImplementedError
    raise AssertionError

    # Don't complain about code that's only for type checking
    if TYPE_CHECKING:
    if typing.TYPE_CHECKING:

precision = 2

[html]
directory = htmlcov
